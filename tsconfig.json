{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "./dist",
    "target": "es6",
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@src/*": [
        "./src/*"
      ]
    },
  },
  "exclude": [
    "node_modules",
    ".vscode"
  ],
  "ts-node": {
    "require": [
      "./node_modules/tsconfig-paths/register"
    ]
  },
}
